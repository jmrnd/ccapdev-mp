<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Foroom</title>

    {{>headext}}
</head>

<body>

  <!-- Navbar -->
  {{> navbar-registered}}

  <!--create a post-->
  <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="card mt-4 mb-0">
                <div class="card-body rounded">
                    <div class="mt-2">
                        <img class="rounded-circle ms-4" src="{{currentUser.icon}}" alt="profile_picture" width="50" height="50">
                        <span class="post-author ms-2 pt-2"> Posting as {{currentUser.username}}</span>
                    </div>
                    <form id="create-post" method="POST" action="/create_post/">
                        <div class="create-post-content">
                            <span>Title:</span>
                            <div class="create-post-title-container">
                                <input type="text" name="title" id="post-title" class="create-a-post-title card col-md-12 mt-2 mb-0"
                                placeholder="Title ...">
                            </div>
                            <br><span>Body:</span>
                            <div class="create-post-text-container">
                                <textarea class="create-a-post-box card col-md-12 mt-2 mb-0" id="" name="text" placeholder="Body ..."
                                required>{{body}}</textarea>
                                <br>
                                <input class="create-post-button rounded" type="submit" value="Post">
                            </div>
                        </div>
                    </form>
                <!--Script for auto resize text box-->
                <script>
                  const textarea = document.querySelector("textarea");
                  textarea.addEventListener("keyup", e => {
                    textarea.style.height = "102px";
                    let scHeight = e.target.scrollHeight;
                    textarea.style.height = `${scHeight}px`;
                  });
                </script>
                <!--end Script for auto resize text box-->
              </div>
            </div>
          </div>
        </div>
      </div>


</body>

</html>