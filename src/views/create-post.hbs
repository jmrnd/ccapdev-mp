<div class="row d-flex justify-content-center">
    <div class="col-md-7">
        <div class="card mt-4 mb-0">
            <div class="card-body rounded">
                <div class="mt-2">
                    <h1 class="fw-bolder my-3 ms-4" id="searchResultsHeading">Create a post</h1>
                </div>
                <form id="create-post">
                    <div class="create-post-content">
                        <div class="create-post-title-container">
                            <input type="text" name="title" id="post-title" class="create-a-post-title"
                            placeholder="Title ..." required>
                        </div>
                        <div class="create-post-text-container">
                            <textarea class="create-a-post-box col-md-12 mt-2 mb-0" id="" name="text" placeholder="Body ..."
                            required>{{body}}</textarea>
                            <input class="create-post-button rounded" type="submit" value="Post">
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>