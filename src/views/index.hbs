<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ headerTitle }}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- Bootstrap JavaScript -->
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script defer src="https://kit.fontawesome.com/f3e84a984d.js" crossorigin="anonymous"></script>
    <script defer src="static/js/sortPosts.js"></script>
    <link rel="stylesheet" href="static/css/stylesheet.css">
</head>
<body>

    <!-- Navbar -->
    {{#if userFound}}
        {{>navbar-registered}}
    {{else}}
        
        {{>navbar-unregistered}}
    {{/if}}

    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-7">
                <div class="card mt-3 mb-2">
                    <div class="card-body rounded">
                        <div class="input-group mb-auto">
                            {{!-- TODO: view profile --}}
                            <a href="../profiles/view-profile-view.html"
                                class="nav-link d-sm-flex align-items-sm-center me-3">
                                <img class="rounded-circle create-pfp" src="{{icon}}"
                                    alt="profile_picture" width="35" height="35">
                            </a>
                            <!-- Clicking the create post should redirect the user to the create a post view/page (similar to reddit) -->
                            <a href="/create-post" class="form-control create-post-link"
                                style="text-decoration: none;">Create a post</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Sort button groups -->
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-7">
                <div class="card">
                    <div class="card-body rounded d-flex justify-content-start align-items-center py-1">
                        <span class="me-2">Sort posts: </span>
                        <button class="btn sort-btn me-1 my-0" id="sortUpvotes" type="button">
                            <i class="bi bi-caret-up-fill"></i>
                            <span class="ms-1">Upvotes</span>
                        </button>
                        <button class="btn sort-btn mx-1 my-0" id="sortDate" type="button">
                            <i class="bi bi-calendar-date"></i>
                            <span class="ms-1">Date</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Start of posts -->
    <div class="container" id="postsContainer">
        {{#each posts}}
            {{!-- it buggin D: --}}
            {{!-- {{#if (isEqual this.author.username activeUser.userID.username)}}
                {{> mypost-card}}
            {{else}}
                {{> otherpost-card}}
            {{/if}} --}}
            {{> mypost-card}}
        {{/each}}
    </div>

</body>
</html>