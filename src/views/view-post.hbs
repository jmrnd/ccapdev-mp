<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>foroom</title>

    {{>headext}}
</head>

<body>

    {{#if userFound}}
        {{> navbar-registered}}
    {{else}}
        {{> navbar-unregistered}}
    {{/if}}

  <!--main post-->
    <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="card mt-2 mb-0">
                <div class="card-body rounded">
                    <div class="d-flex justify-content-between">
                        <div class="d-flex align-items-center">
                            <img class="rounded-circle me-2" src="{{postAuthor.icon}}" alt="profile_picture" width="35" height="35">
                            <span class="post-author ms-1">
                            <a href="/view-profile/{{postAuthor.username}}" class="post-author-link link-underline link-underline-opacity-0">{{postAuthor.username}}</a>
                            </span>
                            <span class="post-author ms-1 fw-sm ms-2">{{relativeTime post.postDate}}</span>
                        </div>

            <div class="d-flex align-items-center">
            {{#if (isEqual postAuthor.username currentUser.username)}}
               <div class="iconGrid">
                    <button class="btn btn-sm" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false"aria-haspopup="true">
                        <i class="bi bi-three-dots iconGrid-color"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <li>
                            <a class="dropdown-item" href="/edit-post/{{postId}}">Edit Post<i class="bi bi-pencil ms-2"></i>
                            </a>
                        </li>
                        <li>
                            <a class="dropdown-item delete-post text-danger" href="/delete-post/{{postId}}">Delete Post<i class="bi bi-trash ms-2"></i>
                            </a>
                        </li>
                    </div>
                </div>
            {{/if}}
            </div>
            </div>
            <div class="post-content">
                <div class="d-flex flex-row justify-content-start align-baseline" id="title">
                  <p class="post-title" id="postTitle">{{{post.title}}}</p>
                </div>

                <div class="post-para" id="post">
                  <p class="post-text" id="postText">
                    {{{post.body}}}
                  </p>
                </div>

              <div class="flex-center iconGrid">
                <i id="upvoteIcon/{{postId}}" class="bi bi-caret-up iconGrid-upvote iconGrid-color"></i>
                <span id="voteCount/{{postId}}" class="iconGrid-text mx-1">{{post.totalVotes}}</span>
                <i id="downvoteIcon/{{postId}}" class="bi bi-caret-down iconGrid-downvote iconGrid-color"></i>
                <i class="bi bi-chat-right-text ms-3 iconGrid-comment iconGrid-color"></i>
                <span class="iconGrid-text mx-1">{{totalComments}} comments</span>
              </div>

              <hr style="width: 100%">
              <!--Comment box-->
              <div class="comment-box-container">
                <span class="post-author ms-1 pt-2" id="commenting-as">Commenting as {{ currentUser.username }}</span>
                <form action="/create_comment/{{postId}}" method="post">
                <textarea class="comment-box card col-md-12 mt-2 mb-0" name="comment" placeholder="Leave a Comment ..."
                  id="CommentBox"></textarea>
                <button type="submit" class="comment-button rounded">Comment</button>
                </form>
              </div>
              <!--Script for auto resize comment box-->
              <script>
                const textarea = document.querySelector("textarea");
                textarea.addEventListener("keyup", e => {
                  textarea.style.height = "102px";
                  let scHeight = e.target.scrollHeight;
                  textarea.style.height = `${scHeight}px`;
                });
              </script>
              <!--end Script for auto resize comment box-->
                </div>
                </div>
            </div>
        </div>
        <span class="comment-label col-sm-6 mt-3 mb-2">Comments:</span>
    </div>

  {{!-- Check if there is a comment --}}
    {{#if comments}}

    <div class="comment-space-container" id="commentSpace"> <!-- comments section-->
        {{#each comments}}
          {{#if (isEqual this.author.username @root.currentUser.username)}}
            {{>myComment comment=this postId=@root.postId }}
          {{else}}
            {{>otherComment postId=@root.postId}}
          {{/if}}
        {{/each}}
    </div>
    {{else}}
    <p><center>No comments yet.</center></p>
    {{/if}}
</body>

</html>