<div class="container">
    <div class="row d-flex justify-content-center">
            <div class="col-md-7 mt-2">
                <div class="rounded d-flex justify-content-start align-items-center py-1 mt-2">
                    <h3 class="fw-bolder my-4" id="searchResultsHeading">Comments by {{viewUser.username}}</h3>
                </div>
            </div>
        </div>
    </div>
</div>

{{> filterCommentBox}}

<div class="container" id="commentsContainer">
    {{#each comments currentUser=currentUser._id}}
        {{#if (isEqual this.author.username ../currentUser.username)}}
            {{> myComment this postId=../postId isIndex=../isIndex}}
        {{else}}
            {{> otherComment this postId=../postId isIndex=../isIndex}}
        {{/if}}
    {{/each}}
</div>
