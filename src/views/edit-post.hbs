<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>foroom</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- Bootstrap JavaScript -->
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script defer src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.29.1/moment.min.js"></script>
    <script defer src="https://kit.fontawesome.com/f3e84a984d.js" crossorigin="anonymous"></script>
    <scrip defer src="/static/js.post.js"></script>
  <link rel="stylesheet" href="/static/css/stylesheet.css">
  <link rel="stylesheet" href="/static/css/post.css">
</head>

<body>

    {{#if userFound}}
        {{> navbar-registered}}
    {{else}}
        {{> navbar-unregistered}}
    {{/if}}

    <div class="row d-flex justify-content-center">
        <div class="col-md-7">
            <div class="card mt-4 mb-0">
                <div class="card-body rounded">
                    <div class="mt-2">
                        <img class="rounded-circle ms-4" src="{{currentUser.icon}}" alt="profile_picture" width="60" height="60">
                        <span class="post-author ms-2 pt-2"> Editing post as {{currentUser.username}}</span>
                    </div>
                        <form id="create-post" method="POST" action="/update_post/{{postId}}">
                            <div class="create-post-content">
                                <span>Title:</span>
                                <div class="create-post-title-container">
                                    <input type="hidden" name="postId" value="{{postId}}">
                                    <input type="text" name="title" id="post-title" class="create-a-post-title card col-md-12 mt-2 mb-0"
                                    value="{{title}}">
                                </div>
                                <br><span>Body:</span>
                                <div class="create-post-text-container">
                                    <textarea class="create-a-post-box card col-md-12 mt-2 mb-0" id="" name="text"
                                    required>{{body}}</textarea>
                                    <br>
                                    <input class="create-post-button rounded ms-2" type="submit" value="Submit" required>
                                    <a href="/view-post/{{postId}}" class="create-post-button rounded link-underline link-underline-opacity-0">Back</a>
                                </div>
                            </div>
                        </form>
                        <!--Script for auto resize text box-->
                        <script>
                        const textarea = document.querySelector("textarea");
                        textarea.addEventListener("keyup", e => {
                            textarea.style.height = "102px";
                            let scHeight = e.target.scrollHeight;
                            textarea.style.height = `${scHeight}px`;
                        });
                        </script>
                        <!--end Script for auto resize text box-->
                    </div>
                </div>
            </div>
        </div>
    </div>


</body>

</html>