<!--comment-->
<div class="row d-flex justify-content-center">
    <div class="col-md-7">
        <div class="card mt-2 mb-0">
            <div class="card-body rounded">
                <div class="d-flex justify-content-between">

                    <div class="d-flex align-items-center">
                        <img
                            class="rounded-circle"
                            src="{{author.icon}}"
                            alt="profile_picture"
                            width="35"
                            height="35"
                        />
                        <span class="post-author ms-1 pt-2 fw-medium ms-2">
                            <a href="" class="link-unstyled">{{author.username}}</a>
                        </span>
                        <span class="post-author ms-1 pt-2 fw-sm">â€¢
                            {{relativeTime commentDate}}</span>
                    </div>
                    <div class="d-flex align-items-center">
                        <div class="iconGrid">
                                <button
                                    class="btn btn-sm"
                                    type="button"
                                    id="dropdownMenuButton"
                                    data-bs-toggle="dropdown"
                                    aria-expanded="false"
                                    aria-haspopup="true">
                                    <i class="bi bi-three-dots iconGrid-color"></i>
                                </button>
                                    <div
                                        class="dropdown-menu"
                                        aria-labelledby="dropdownMenuButton">
                                        <li><a
                                                class="dropdown-item edit-comment-btn"
                                                href="#"
                                            >Edit Post<i
                                                    class="bi bi-pencil ms-2"
                                                ></i></a></li>
                                        <li><a
                                                class="dropdown-item delete-post text-danger"
                                                href="/delete-comment/{{postId}}/{{comment._id}}"
                                            >Delete Post<i
                                                    class="bi bi-trash ms-2"
                                                ></i></a></li>
                                    </div>
                        </div>
                    </div>
                </div>

                <div class="comment-thread">
                    <!--vertical thread line-->
                    <div class="comment-content">
                        <p class="comment-text">
                            {{{body}}}
                        </p>
                        <div class="flex-center iconGrid">
                            <i
                                id="commentUpvoteIcon/{{this._id}}"
                                class="bi bi-caret-up iconGrid-upvote iconGrid-color commentUpvote"
                            ></i>
                            <span
                                id="voteCount/{{this._id}}"
                                class="iconGrid-text mx-1"
                            >{{totalVotes}}</span>
                            <i
                                id="commentDownvoteIcon/{{this._id}}"
                                class="bi bi-caret-down iconGrid-downvote iconGrid-color commentDownvote"
                            ></i>
                            <i class="bi bi-reply mx-2"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>