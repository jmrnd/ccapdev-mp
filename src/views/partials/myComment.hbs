<!--comment-->
<div class="row d-flex justify-content-center">
    <div class="col-md-7">
        <div class="card mt-2 mb-0">
            <div class="card-body rounded">
                <img
                    class="rounded-circle"
                    src="{{author.icon}}"
                    alt="profile_picture"
                    width="35"
                    height="35"
                />
                <span class="post-author ms-1 pt-2 fw-medium ms-2">
                    <a href="" class="link-unstyled">{{author.username}}</a>
                </span>
                <span class="post-author ms-1 pt-2 fw-sm">â€¢
                    {{relativeTime commentDate}}</span>
                <div class="comment-thread">
                    <!--vertical thread line-->
                    <div class="comment-content">
                        <p class="comment-text">
                            {{{body}}}
                        </p>
                        <div class="flex-center iconGrid">
                            <i
                                id="upvoteIcon-{{this._id}}"
                                class="bi bi-caret-up iconGrid-upvote iconGrid-color"
                            ></i>
                            <span
                                id="voteCount-{{this._id}}"
                                class="iconGrid-text mx-1"
                            >3</span>
                            <i
                                id="downvoteIcon-{{this._id}}"
                                class="bi bi-caret-down iconGrid-downvote iconGrid-color"
                            ></i>
                            <i class="bi bi-reply mx-2"></i>
                        </div>
                        <div class="iconGrid">
                            <button
                                class="btn btn-sm"
                                type="button"
                                id="dropdownMenuButton"
                                data-bs-toggle="dropdown"
                                aria-expanded="false"
                                aria-haspopup="true"
                            >
                                <i class="bi bi-three-dots iconGrid-color"></i>
                            </button>
                            <div
                                class="dropdown-menu"
                                aria-labelledby="dropdownMenuButton"
                            >
                                <li><a
                                        class="dropdown-item"
                                        href="/edit-post/{{postId}}"
                                    >Edit Post<i
                                            class="bi bi-pencil ms-2"
                                        ></i></a></li>
                                <li><a
                                        class="dropdown-item delete-post text-danger"
                                        href="/delete-post/{{postId}}"
                                    >Delete Post<i
                                            class="bi bi-trash ms-2"
                                        ></i></a></li>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>