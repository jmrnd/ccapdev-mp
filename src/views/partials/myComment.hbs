<div class="comment-card row d-flex justify-content-center" data-date-comments="{{commentDate}}" data-upvotes-comments="{{totalVotes}}">
    {{#if isIndex}}
    <div class="col-md-7">
    {{else}}
    <div class="col-md-0">
    {{/if}}
        <div class="card mt-2 mb-0">
            <div class="card-body rounded">
                {{!-- COMMENT HEADER --}}
                <div class="d-flex justify-content-between">
                    {{!-- AUTHOR AND COMMENT DETAILS --}}
                    <div class="d-flex align-items-center">
                        <img class="rounded-circle" src="{{author.icon}}" alt="profile_picture" width="35" height="35"/>
                        <span class="post-author ms-2 fw-medium">
                            <a href="/view-profile/{{author.username}}" class="link-unstyled">{{author.username}}</a>
                        </span>
                        {{#if this.editDate}}
                        <span class="post-author ms-1 fw-sm" id="commentDate">• {{relativeTime commentDate}} •<span class="fst-italic fw-light"> edited {{relativeTime this.editDate}}</span></span>
                        {{else}}
                        <span class="post-author ms-1 fw-sm" id="commentDate">• {{relativeTime commentDate}}</span>
                        {{/if}}
                    </div>
                    {{!-- MORE OPTIONS --}}
                    <div class="d-flex align-items-center">
                        <div class="iconGrid">
                            <button class="btn btn-sm" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-expanded="false" aria-haspopup="true">
                                <i class="bi bi-three-dots iconGrid-color"></i>
                            </button>
                            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                {{#if isPost}}
                                <li>
                                    <a class="dropdown-item edit-comment-btn" id="/edit-comment/{{this.post}}/{{this._id}}"><i class="bi bi-pencil me-2"></i>Edit</a>
                                </li>
                                <li>
                                    <a class="dropdown-item delete-comment-btn" id="/delete-comment/{{this.post}}/{{this._id}}"><i class="bi bi-trash me-2"></i>Delete comment</a>
                                </li>
                                {{else}}
                                <li>
                                    <a href="/view-post/{{this.post}}" class="dropdown-item"><i class="bi bi-box-arrow-up-right me-2"></i>Go to post</a>
                                </li>
                                {{/if}}
                            </div>
                        </div>
                    </div>
                </div>
                {{!-- COMMENT BODY --}}
                <div class="comment-thread">
                    <div class="comment-content">
                        <p class="comment-text">{{{body}}}</p>   
                        <div class="flex-center iconGrid">
                        {{#if (hasVoted currentUser upVoters downVoters)}} {{!-- User has voted on the post--}}
                            {{#if (isUpvoter currentUser upVoters)}}
                            <i id="commentUpvoteIcon/{{this._id}}" class="bi bi-caret-up-fill iconGrid-upvote iconGrid-color postUpvote"></i>
                            <span id="voteCount/{{this._id}}" class="iconGrid-text mx-1">{{totalVotes}}</span>
                            <i id="commentDownvoteIcon/{{this._id}}" class="bi bi-caret-down iconGrid-downvote iconGrid-color postDownvote"></i>
                            {{else}}
                            <i id="commentUpvoteIcon/{{this._id}}" class="bi bi-caret-up iconGrid-upvote iconGrid-color postUpvote"></i>
                            <span id="voteCount/{{this._id}}" class="iconGrid-text mx-1">{{totalVotes}}</span>
                            <i id="commentDownvoteIcon/{{this._id}}" class="bi bi-caret-down iconGrid-downvote iconGrid-color commentDownvote"></i>
                            <i class="bi bi-reply mx-2 reply-button" data-id="{{this._id}}"></i>
                        </div>
                        <!-- Reply form starts here -->
                        <div class="reply-form" id="reply-form-{{this._id}}" data-id="{{this._id}}" style="display: none;">
                            <!-- Change the action attribute to target the reply route -->
                            <form action="/create_reply/{{this._id}}" method="post">
                                <textarea class="comment-box card col-md-12 mt-2 mb-0" name="comment" placeholder="Reply to this comment..." id="ReplyBox"></textarea>
                                <button type="submit" class="comment-button rounded">Reply</button>
                            </form>
                        </div>
                        <!-- Reply form ends here -->
                        <!-- Replies section -->
                        <div class="replies">
                            <!-- Reply form ends here for nested replies -->
                            {{#each this.replies}}
                                {{> replyPartial parent=this reply=this}}
                            {{/each}}
                            <!-- More fields can be added as needed -->
                        </div>
                        <!-- Replies section ends here -->    
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>