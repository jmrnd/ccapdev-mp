<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ headerTitle }}</title>

    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">

    <!-- Bootstrap JavaScript -->
    <script defer src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-geWF76RCwLtnZ8qwWowPQNguL3RmwHVBC9FhGdlKrxdiJJigb/j/68SIy3Te4Bkz"
        crossorigin="anonymous"></script>

    <script defer src="https://kit.fontawesome.com/f3e84a984d.js" crossorigin="anonymous"></script>
    <script defer src="static/js/sortPosts.js"></script>
    <link rel="stylesheet" href="static/css/stylesheet.css">
</head>
<body>

    <!-- Navbar -->
    {{#if userFound}}
        {{>navbar-registered}}
    {{else}}
        {{>navbar-unregistered}}
    {{/if}}

    <!-- Search keyword -->
    <div class="container">
      <div class="row d-flex justify-content-center">
        <div class="col-md-7 mt-2">
          <divclass="rounded d-flex justify-content-start align-items-center py-1 mt-2">
            <h3 class="fw-bolder" id="searchResultsHeading">Showing results for "{{{searchText}}}"</h3>
          </div>
        </div>
      </div>
    </div>

    <!-- Sort button groups -->
    <div class="container">
        <div class="row d-flex justify-content-center">
            <div class="col-md-7">
                <div class="card">
                    <div class="card-body rounded d-flex justify-content-start align-items-center py-1">
                        <span class="me-2">Sort posts: </span>
                        <button class="btn sort-btn me-1 my-0" id="sortUpvotes" type="button">
                            <i class="bi bi-caret-up-fill"></i>
                            <span class="ms-1">Upvotes</span>
                        </button>
                        <button class="btn sort-btn mx-1 my-0" id="sortDate" type="button">
                            <i class="bi bi-calendar-date"></i>
                            <span class="ms-1">Date</span>
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Display results -->
    <div class="container" id="postsContainer">
      {{#if posts.length}}
        {{#each posts}}
          {{> mypost-card}}
        {{/each}}
      {{else}}
        {{!-- TODO: update style --}}
        <p>No results for "{{searchText}}"</p> 
      {{/if}}
    </div>
</body>
</html>